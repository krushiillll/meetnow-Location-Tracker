<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gnt_white"
    tools:context="com.meetnow.location.tracker.Personal_Next_Activity">


    <RelativeLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:padding="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ad Loading..."
            android:textAppearance="@style/adStyle"
            android:textColor="@color/blue"
            android:layout_centerInParent="true"/>


        <FrameLayout
            android:id="@+id/frameNativeAd"
            android:layout_width="match_parent"
            android:layout_height="315dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/device_back"
        android:fontFamily="@font/montserrat_bold"
        android:text="Next"
        android:padding="@dimen/_8sdp"
        android:layout_below="@+id/txt_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/txt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lin"
        android:textAppearance="@style/lorem_ipsum"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/latoregular"
        android:text="@string/next_tv"
        android:textColor="#005DFF"
        android:textSize="@dimen/_20sdp" />

<!--    <RelativeLayout-->
<!--        android:id="@+id/banner_container"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_alignParentBottom="true"/>-->

</RelativeLayout>