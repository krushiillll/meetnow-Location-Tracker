<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.meetnow.location.tracker.Personal_ThankYou_Activity">

    <RelativeLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ad Loading..."
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="12dp"/>


        <FrameLayout
            android:id="@+id/frameSmallNativeAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <ImageView
        android:id="@+id/tq"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_thankyou"
        app:tint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tq"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/latobold"
        android:text="For using our apps..."
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

</RelativeLayout>